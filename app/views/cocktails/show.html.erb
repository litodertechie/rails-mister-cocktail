<h1><%=@cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
<li><%= dose.ingredient.name %> - <%= dose.description %></li>
<% end %>
<div><%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %></div>
<%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Back', cocktail_path(@cocktail) %>


